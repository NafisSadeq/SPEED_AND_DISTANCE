<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:keepScreenOn="true"
              android:weightSum="1" >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CURRENT LOCATION"
            android:id="@+id/LOCATION" android:layout_gravity="right" android:textColor="#ff00ffff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView4" android:layout_gravity="right" android:textColor="#ff00ffff"
            android:layout_weight="0.04"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView5" android:layout_gravity="right" android:textColor="#ff00ffff"
            android:layout_weight="0.06"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DISTANCE COVERED"
            android:id="@+id/DISTANCE" android:layout_gravity="right" android:textColor="#ff00ffff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView8" android:layout_gravity="right" android:textColor="#ff00ffff"
            android:layout_weight="0.25"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CURRENT  SPEED   "
            android:id="@+id/CURRENT" android:layout_gravity="right" android:textColor="#ff00ffff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView9" android:layout_gravity="right" android:textColor="#ff00ffff"
            android:layout_weight=".25"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AVERAGE  SPEED   "
            android:id="@+id/AVERAGE" android:layout_gravity="right" android:textColor="#ff00ffff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView10" android:layout_gravity="right" android:textColor="#ff00ffff"
            android:layout_weight=".25"/>
</LinearLayout>

